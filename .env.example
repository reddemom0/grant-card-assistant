# Anthropic API Key
# Used for both production (api/server.js) and Agent SDK testing
# Get your key from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Redis/Upstash (for session storage - separate from Anthropic's prompt caching)
UPSTASH_REDIS_REST_URL=your-upstash-url
UPSTASH_REDIS_REST_TOKEN=your-upstash-token

# Google Drive Service Account (legacy - will be deprecated after Agent SDK migration)
GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account",...}
GOOGLE_DRIVE_FOLDER_ID=your-folder-id

# Google OAuth
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret

# Security
JWT_SECRET=your-jwt-secret
TEAM_PASSWORD=your-team-password

# Database (Vercel Postgres)
POSTGRES_URL=your-postgres-url

# Optional: Agent SDK Configuration
USE_AGENT_SDK=false  # Set to true to enable Agent SDK (phase 2+)
